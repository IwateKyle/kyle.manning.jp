  @media only screen and (max-width: 630px) {
    .container {
      flex-direction: column-reverse;
    }
    .text {
      margin-left: 3ch;
      margin-top: 15%;
    }
  }
  @media only screen and (max-width: 350px) {
    .title {
      font-size: 5ch;
    }
    img {
      width: 70%;
      align-self: center;
    }
  }
</style>
